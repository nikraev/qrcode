<%= form_tag("search", method: "get") do %>
  
    <%= label_tag(:lastname, "Фамилия:") %>
    <%= text_field_tag(:@lastname) %>
    <br>
    <%= label_tag(:firstname,"Имя") %>
    <%= text_field_tag(:firstname) %>
    <br>
    <%= label_tag(:organization,"Организация") %>
    <%= text_field_tag(:firstname, "DataLine") %>
    <br>
    <%= label_tag(:jobtitle,"Должность") %>
    <%= text_field_tag(:jobtitle) %>
    <br>
    <%= label_tag(:email,"E-mail") %>
    <%= text_field_tag(:email ) %>
    <br>
    <%= label_tag(:url,"URL") %>
    <%= text_field_tag(:url,"www.dtln.ru") %>
    <br>
    <%= label_tag(:phone,"Мобильный телефон") %>
    <%= text_field_tag(:phone) %>
    <br>
    <%= label_tag(:officephone,"Рабочий телефон") %>
    <%= text_field_tag(:officephone,) %>
    <br>

    <%= submit_tag("Search") %>
  <% end %>

<% form_for :post do |p| %>

  <%= p.label :lastname %>
  <%= p.text_area :lastname %>

  <%= p.submit %>
<% end %>

<table>
  <tr>
    <td>ФИО</td>
  </tr>

  <%  @codes.each do |code| %>
  <tr>
    <td><%= code.lastname + code.firstname %></td>
  </tr>
<% end  %>
</table>
